@model SigninModel
@{
    ViewData["Title"] = "Sign In";
    ViewData["SignIn"] = "active";
}
<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card o-hidden border-0 shadow-custom my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        @*<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>*@
                        <div class="col-md-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Chào mừng trở lại!</h1>
                                </div>
                                <div class="text-danger ml-3" asp-validation-summary="All"></div>
                                <form class="user mt-3" method="post" asp-controller="Account" asp-action="Signin">                                    
                                    <div class="form-group">
                                        <input asp-for="Email" type="email" class="form-control form-control-user" id="InputEmail" placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" type="password" class="form-control form-control-user" id="InputPassword" placeholder="Mật khẩu">
                                    </div>
                                    @*<div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">Remember Me</label>
                                        </div>
                                    </div>*@
                                    <button class="btn btn-custom btn-block bg-theme" type="submit">Sign In</button>
                                    <hr>
                                    <a href="#" class="btn bg-facebook btn-custom btn-block">
                                        <i class="fab fa-facebook-f fa-fw"></i> Đăng nhập với tài khoản Facebook
                                    </a>
                                    <a href="#" class="btn bg-google btn-custom btn-block">
                                        <i class="fab fa-google fa-fw"></i> Đăng nhập với tài khoản Google
                                    </a>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="#">Quên mật khẩu?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="#">Tạo tài khoản!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles{
    <link href="~/css/Account/account.css" rel="stylesheet" />
}

