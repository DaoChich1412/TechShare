@model SignupModel
@{
    ViewData["Title"] = "Đăng ký";
} 
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card o-hidden border-0 shadow-custom my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @*<div class="col-lg-5 d-none d-lg-block bg-register-image"></div>*@
                        <div class="col-md-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Tạo tài khoản</h1>
                                </div>
                                <form class="user" method="post" asp-controller="Account" asp-action="Signup">
                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <input asp-for="LastName" type="text" class="form-control" id="LastName" placeholder="Họ">
                                        </div>
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <input asp-for="FirstName" type="text" class="form-control" id="FirstName" placeholder="Tên">
                                        </div>
                                    </div>                                    
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <input asp-for="UserName" type="text" class="form-control" id="UserName" placeholder="Nickname">
                                        </div>
                                        <div class="col-sm-3 pr-0">
                                            <input asp-for="Job" type="text" class="form-control" id="UserJob" placeholder="Nghề nghiệp">
                                        </div>
                                        <div class="col-sm-3 pl-1">
                                            <select asp-for="Gender" class="form-control" id="UserGender">
                                                <option value="0" selected>Nam</option>
                                                <option value="1">Nữ</option>
                                                <option value="2">Không xác định</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Email" type="email" class="form-control" id="InputEmail" placeholder="Email">
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            <input asp-for="Password" type="password" class="form-control" id="InputPassword" placeholder="Mật khẩu">
                                        </div>
                                        <div class="col-sm-6">
                                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="RepeatPassword" placeholder="Nhập lại mật khẩu">
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-custom btn-block bg-theme">Đăng ký</button>
                                    <hr>
                                    <a href="#" class="btn btn-custom btn-block bg-facebook">
                                        <i class="fab fa-facebook-f fa-fw"></i> Đăng ký với tài khoản Facebook
                                    </a>
                                    <a href="#" class="btn btn-custom btn-block bg-google">
                                        <i class="fab fa-google fa-fw"></i> Đăng ký với tài khoản Google
                                    </a>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="#">Đã có tài khoản? Đăng nhập!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles{
    <link href="~/css/Account/account.css" rel="stylesheet" />
}

