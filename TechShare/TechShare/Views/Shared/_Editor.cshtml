<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="card o-hidden border-0">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="text-danger ml-3 error"></div>
                            <form class="new-post mt-3">
                                <div class="form-group">
                                    <input class="form-control" id="InputTitle" placeholder="Tiêu đề">
                                </div>
                                <div class="form-group">
                                    <select class="select-custom" multiple data-live-search="true" data-max-options="3" title="Thể loại" id="InputCategory">
                                        <!--Binding data-->
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control ck-editor" id="InputAvatar" placeholder="Ảnh đại diện"/>
                                </div>
                                <div class="form-group">
                                    <textarea rows="20" class="form-control ck-editor" id="InputContent" placeholder="Nhập nội dung bài viết của bạn vào đây..."></textarea>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <div class="btn btn-primary-custom mr-3" id="btn-save-post">Lưu bài viết</div>
                                    <div class="btn btn-primary-custom" id="btn-submit-post">Gửi bài viết</div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
